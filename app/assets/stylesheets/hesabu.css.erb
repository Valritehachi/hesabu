  background-color:#559bd7;
  border-radius: 20px !important;
  font-size: 24px;
  padding:10px 30px;
  width: 200px;
  height:43px;
  margin-bottom:10px !important;
  color: #FFFFFF !important;
  display: flex;
  justify-content: center;
  align-items: center;
