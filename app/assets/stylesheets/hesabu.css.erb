.center-container {
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center; 
  height: 100px; 
  color:#559bd7;
}

.right-container {
  display: flex;
  flex-direction: column;
  justify-content: right; /* Center horizontally */
  align-items: right; /* Center vertically */
  color:#559bd7;
}

.input-field {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
}

p {
  letter-spacing: normal;
}

.short-line {
  width: 300px; /* Adjust the length of the line */
  height: 1px;
  background-color: #559bd7;
  margin: 2px 0; /* Adjust vertical spacing around the line */
}

.main-container{
  margin: 200px;
}

.shiny-gradient {
  background: linear-gradient(75deg, #fafa3e, #65d9ff);
  background-size: 150% 150%;
  animation: glowingAnimation 3s ease-in-out infinite;
}

@keyframes gradientAnimation {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 100% 50%;
  }
}

.login-container{
  margin: 0 auto;
  width: 300px;
  border-radius: 20px;
  padding: 10px;
  border: 10px solid #207edf;
  background-color: #ffc107;
  .title{
    text-align: center;
  }
}
.box-panel{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.box {
  width: 200px;
  height: 200px;
  margin: 10px;
  background-color: #61c9ff;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  border-radius: 10px;
  overflow: hidden;
  border: 5px solid black;
  padding: 5px;
  &.addition{
    background: url(<%= image_path('hesabu/button-tiger.jpg') %>) no-repeat;
    background-size: cover;
  }
  &.subtraction{
    background: url(<%= image_path('hesabu/button-lion.jpg') %>) no-repeat;
    background-size: cover;
  }
  &.multiplication{
    background: url(<%= image_path('hesabu/button-monkey.jpg') %>) no-repeat;
    background-size: cover;
  }
  &.division{
    background: url(<%= image_path('hesabu/button-giraffe.jpg') %>) no-repeat;
    background-size: cover;
  }
}
.button-container {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  width: 300px;
  border-radius: 20px;
  padding: 10px;
  border: 1px solid black;
  gap: 10px;
