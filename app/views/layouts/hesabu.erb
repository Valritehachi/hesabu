   </head>
  <body class="hesabu">
  <%= render partial: 'shared/nav' %>
  <% if flash[:error].present? %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>
  <div class="container-fluid main-container">
    <%= yield %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="<%= asset_path('hesabu.js') %>"></script>
  <%= javascript_include_tag src="https://github.com/devongovett/pdfkit/releases/download/v0.10.0/pdfkit.standalone.js" %>
  <%= javascript_include_tag src="https://github.com/devongovett/blob-stream/releases/download/v0.1.3/blob-stream.js" %>
  <%= javascript_include_tag src="https://cdn.jsdelivr.net/npm/meyda@5.6.0/dist/web/meyda.min.js" %>
 
  </body>
</html>
