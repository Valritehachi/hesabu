<html lang='en'>
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hesabu - Discover The Magic Of Numbers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    -->
    <link rel="stylesheet" media="all" href="https://fonts.googleapis.com/css?family=Archivo+Black:400,600,700" >

    <link rel="stylesheet" media="all" href="<%= asset_path('hesabu.css') %>" >
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
